<div class="col-md-12">

  <h2 class="text-center"> 新增电影评论 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> 片名 </th>
        <th> 影片简介 </th>
        <th> 评论数 </th>
        <th> 最后更新 </th>
      </tr>
    </thead>

    <tbody>
      <% @movies.each do |movie| %>
      <tr>
        <td> # </td>
        <td> <%= link_to(movie.title,movie_path(movie)) %> </td>
        <td> <%= render_movie_information(movie) %> </td>
        <td> <%= movie.reviews.count %> </td>
        <td> <%= movie.updated_at %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
